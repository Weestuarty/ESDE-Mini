<theme>

    <variant name="all">
        <view name="system">
            <gameselector name="select">
                <selection>random</selection>
                <gameCount>1</gameCount>
            </gameselector>
            

            <helpsystem name="help">
                <pos>.02 0.95</pos>
                <origin>0 1</origin>
                <fontPath>${primaryFont}</fontPath>
                <textColor>${helpColor}</textColor>
                <iconColor>${helpColor}</iconColor>
                <fontSize>${helpfont2}</fontSize>
            </helpsystem>            
        </view>
        <view name="gamelist">
            <helpsystem name="help">
                <pos>0.02 0.95</pos>
                <origin>0 1</origin>
                <fontPath>${primaryFont}</fontPath>
                <textColor>${helpColor}</textColor>
                <iconColor>${helpColor}</iconColor>
                <fontSize>${helpfont2}</fontSize>
            </helpsystem>
            
        </view>
    </variant>
    <variant name="Snesgrid, Nesgrid, Snes2grid,megagrid,psxgrid,mastergrid">

        <view name="system">
            <grid name="system_grid">
                <pos>0.5 0.7</pos>
                <size>0.98 .4</size>
                <origin>0.5 0.5</origin>
                <itemSize>0.14 0.2</itemSize>
                <imageRelativeScale>1</imageRelativeScale>
                <itemScale>1</itemScale>
                <unfocusedItemOpacity>1</unfocusedItemOpacity>
                <selectorLayer>top</selectorLayer>
                <selectorImage>./core/images/sysselect.png</selectorImage>
                <selectorColor>${selectsysColor}</selectorColor>
                <selectorRelativeScale>1.1</selectorRelativeScale>
                <text>${system.fullName}</text>
                <textColor>${sysmenuColor}</textColor>
                <textRelativeScale>1.02</textRelativeScale>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.02</fontSize>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.1</lineSpacing>
                <zIndex>29</zIndex>
            </grid>
            <image name="gamecount2">
                <pos>0.725 0.36</pos>
                <origin>0.5 0.5</origin>
                <maxSize>0.4 0.24</maxSize>
                <imageType>marquee</imageType>
                <zIndex>40</zIndex>
                <gameselectorEntry>1</gameselectorEntry>
            </image>
           
        </view>
    </variant>
    <variant name="Snes, Snes2, Nes,mega,psx,master">
        <view name="system">
            <text name="gamecount">
                <pos>0.075 0.25</pos>
                <fontSize>${sysfont}</fontSize>
            </text>
            <text name="gamesys">
                <pos>0.075 0.15</pos>
                <size>0.9 0.036</size>
                <fontSize>${sysfont}</fontSize>
               
            </text>
            <text name="game">
                
                <pos>0.075 0.2</pos>
                <fontSize>${sysfont}</fontSize>
                
            </text>
            <text name="game3">
                
                
                <pos>0.075 0.35</pos>
                <fontSize>${sysfont}</fontSize>
               
            </text>
            <image name="gamecount2">
                
                <pos>0.575 0.42</pos>
            </image>
            <image name="selected">
                <pos>0.5 0.585</pos>
                <origin>0.5 0</origin>
                <size>0.195 0.28</size>
                <path>./core/images/sysselect.png</path>
                <color>${selectsysColor}</color>
            </image>
        </view>
        <view name="gamelist">
            
            <text name="mdplay">
                <pos>0.945 0.83</pos>
                <origin>.50 0</origin>
                <size>0.05 0</size>
                <metadata>players</metadata>
                <defaultValue>:space:?</defaultValue>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.04</fontSize>
                <lineSpacing>1</lineSpacing>
                <verticalAlignment>bottom</verticalAlignment>
                <horizontalAlignment>left</horizontalAlignment>
                <color>${primaryColor}</color>
                <zIndex>29</zIndex>
            </text>
            <text name="mdlbplay">
                <pos>0.81 0.83</pos>
                <origin>.50 0</origin>
                <size>0.2 0</size>
                <text>Players:</text>
                <defaultValue>:space:?</defaultValue>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.04</fontSize>
                <lineSpacing>1</lineSpacing>
                <verticalAlignment>bottom</verticalAlignment>
                <horizontalAlignment>right</horizontalAlignment>
                <color>${primaryColor}</color>
                <zIndex>29</zIndex>
            </text>
            <rating name="rating">
                <pos>0.345 0.83</pos>
                <size>0.05 0.04</size>
                <interpolation>nearest</interpolation>
                <color>${primaryColor}</color>
                <filledPath>./core/images/rating_filled.svg</filledPath>
                <unfilledPath>./core/images/rating_empty.svg</unfilledPath>
            </rating>
            <badges name="broken">
                <pos>0.71 0.615</pos>
                <size>0.075 .075</size>
            </badges>
        
            <gamelistinfo name="info">
                <pos>0.92 0.1025</pos>
                <origin>0.5 0</origin>
                <size>0.12 0.1</size>
                <horizontalAlignment>center</horizontalAlignment>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.03</fontSize>
                <color>${primaryColor}</color>
            </gamelistinfo>
            <text name="collectionsSystemName">
                <size>0.2 0.1</size>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.03</fontSize>
                <lineSpacing>1</lineSpacing>
                <verticalAlignment>center</verticalAlignment>
                <horizontalAlignment>center</horizontalAlignment>
                <color>${primaryColor}</color>
                <pos>0.65 0.7</pos>
                <origin>.50 0</origin>
            </text>
            <text name="sourceinfo">
                <size>0.7 0.05</size>
                <metadata>systemFullname</metadata>
                <fontPath>${primaryFont}</fontPath>
                <letterCase>capitalize</letterCase>
                <fontSize>${gametitle}</fontSize>
                <lineSpacing>1</lineSpacing>
                <verticalAlignment>center</verticalAlignment>
                <horizontalAlignment>center</horizontalAlignment>
                <color>${primaryColor}</color>
                <pos>0.3 0.115</pos>
                <origin>0 0</origin>
            </text>
            <gamelistinfo name="info">
                <pos>0.92 0.13</pos>
                <origin>0.5 0</origin>
                <size>0.12 0.05</size>
                <horizontalAlignment>center</horizontalAlignment>
                <fontPath>${primaryFont}</fontPath>
                <fontSize>0.025</fontSize>
                <color>${primaryColor}</color>
            </gamelistinfo>
        </view>
    </variant>
    <variant name="Snesgrid, Nesgrid, Snes2grid, megagrid, psxgrid,mastergrid">
        <view name="gamelist">
            

            
        </view>
    </variant>
    <variant name="mega,megagrid">
        <view name="system, gamelist">
            
            
            <helpsystem name="help">
               <pos>0.02 0.96</pos>
                <fontPath>${primaryFont}</fontPath>
                <textColor>DDDDDD</textColor>
                <iconColor>DDDDDD</iconColor>
            </helpsystem>
        </view>
    </variant>

    <variant name="psx,psxgrid">
        <view name="system, gamelist">
            <helpsystem name="help">
                
                
            </helpsystem>
        </view>
    </variant>
    <variant name="master,mastergrid">
        <view name="system, gamelist">
                        
            <helpsystem name="help">
               <pos>0.02 0.945</pos>
                <fontPath>${primaryFont}</fontPath>
                <textColor>DDDDDD</textColor>
                <iconColor>DDDDDD</iconColor>
            </helpsystem>
        </view>
    </variant>

</theme>